@using Entities
@using Services

@inject NavigationManager NavManager

<div>
    <EditForm Model="_oServices">
        <div class="form-group">
            <label>Nombre Servicio:</label>
            <InputText @bind-Value="_oServices.NommbreServicio" class="form-control" />
        </div>
        <div class="form-group">
            <label>Descripcion:</label>
            <InputTextArea @bind-Value="_oServices.DescripcionServicio" class="form-control" />
        </div>
        <input type="button" value="Agregar Servicio" @onclick="SaveProduct" />
    </EditForm>
</div>

@code {
    ServicesEntity _oServices = new ServicesEntity();


    protected override async Task OnInitializedAsync()
    {

    }

    private void SaveProduct()
    {
        _oServices.ServicioId = Guid.NewGuid();
        _oServices.FechaCreacion = DateTime.Now;
        S_Services.CrearPersona(_oServices);
    }

}