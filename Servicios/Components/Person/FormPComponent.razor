@using Entities
@using Services

@inject NavigationManager NavManager

<div>
    <EditForm Model="_oPerson"> 
        <div class="form-group">
            <label>Cedula:</label>
            <InputText @bind-Value="_oPerson.PersonaId" class="form-control" />
        </div>
        <div class="form-group">
            <label>Nombre:</label>
            <InputText @bind-Value="_oPerson.Nombres" class="form-control" />
        </div>
        <div class="form-group">
            <label>Apellido:</label>
            <InputText @bind-Value="_oPerson.Apellidos" class="form-control" />
        </div>
        <div class="form-group">
            <label>Dirección:</label>
            <InputText @bind-Value="_oPerson.Direccion" class="form-control" />
        </div>
        <div class="form-group">
            <label>Email:</label>
            <InputText @bind-Value="_oPerson.Email" class="form-control" />
        </div>

        <input type="button" value="Agregar Persona" @onclick="SaveProduct" />
    </EditForm>
</div>

@code {

    PersonsEntity _oPerson = new PersonsEntity();


    protected override async Task OnInitializedAsync()
    {

    }

    private void SaveProduct()
    {
        S_Persons.CrearPersona(_oPerson);
    }
    
}